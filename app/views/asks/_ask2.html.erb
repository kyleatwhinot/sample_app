<%= form_for(@ask, remote: true) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
  	<p class = "lead"><%= @ask.description %></p>
    <em><%= f.label :helper, "Who do you want to ASK?" %></em>
    <%= f.text_field :helper, placeholder: "name" %>
    
    <em><%= f.label :public, "Make this ask public?" %></em>
    <%= f.check_box :public %>
  </div>
  <%= f.submit "Skip", class: "btn btn-small" %>
  <%= f.submit "Save", class: "btn btn-success" %>
<% end %>