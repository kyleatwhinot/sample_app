<ul>
<% @top3_contacts.each do |c| %>
	<li><%= c %></li>
<% end %>
</ul>

<% if @top3_asks.length > 0 %>
	<h3>You want to make ASKs about:</h3>
	<ul>
	<% @top3_asks.each do |a| %>
		<li><%= a %></li>
	<% end %>
	</ul>
